= bootstrap_form_tag url: url_for(action: :create) do |f|
  = f.text_field 'subject[CN]', label: 'Common Name', placeholder: 'example.com or user@example.com'
  = f.text_field 'subject[O]', label: 'Organization Name', placeholder: 'Foo Widgets, Ltd.'
  = f.text_field 'subject[OU]', label: 'Department Name', placeholder: 'Accounting'
  = f.text_field 'subject[C]', label: 'Country', placeholder: 'US or UK'
  = f.form_group :bit_length, label: { text: 'Bit length' } do
    = f.radio_button :bit_length, '1024', label: '1024 bit (insecure)', class: 'bg-danger'
    = f.radio_button :bit_length, '2048', label: '2048 bit', checked: true
    = f.radio_button :bit_length, '4096', label: '4096 bit'
  = f.submit "Create Certificate", class: 'btn btn-primary'