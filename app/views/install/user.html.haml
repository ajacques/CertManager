%h1 Welcome!
%h3 Create your account
= form_tag action: :create_user do
  = text_field_tag :first_name, nil, placeholder: (t 'account.first_name')
  = text_field_tag :last_name, nil, placeholder: (t 'account.last_name')
  = email_field_tag :email, nil, placeholder: (t 'account.username')
  = password_field_tag :password, nil, placeholder: (t 'account.password')
  = hidden_field_tag :redirect, url_for(action: :configure)
  = submit_tag (t 'account.create')