!!!
%html
  %head
    %title<
      - if content_for? :title
        = "#{yield :title} | #{t 'brand'}"
      - else
        = t 'brand'
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge,chrome=1', http: {equiv: 'X-UA-Compatible'}}
    %meta{content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0', name: 'viewport'}
    = stylesheet_link_tag    'application', media: 'all', data: {turbolinks_track: true}
    = javascript_include_tag 'application', data: {turbolinks_track: true}, defer: true
    = csrf_meta_tags
  %body{data: {page: [controller_name.capitalize, action_name.capitalize].join}}
    = render partial: 'layouts/header'
    = render partial: 'layouts/navbar'
    .container
      = yield