!!! HTML 4.01 Transitional
%html{lang: :en}
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1.0", name: "viewport"}/
    %meta{name: 'format-detection', content: 'telephone=no'}
    %style
      = render 'layouts/mailers/styles'
      = render 'layouts/mailers/responsive'
  %body{style: 'margin: 0; padding: 0', bgcolor: '#f0f0f0', leftmargin: 0, topmargin: 0, marginwidth: 0, marginheight: 0}
    %table{border: 0, width: '100%', height: '100%', cellpadding: 0, cellspacing: 0, bgcolor: '#f0f0f0'}
      %tr
        %td{align: :center, valign: :top, bgcolor: '#f0f0f0', style: 'background-color: #f0f0f0'}
          %br
          %table{border: 0, cellpadding: 0, cellspacing: 0, :class => :container}
            %tr
              %td.container-padding.header{align: :left} Modtalk
            %tr
              %td.container-padding.content{align: :left}
                = yield
              %tr
                %td.container-padding.footer-text{align: :left}
                  = render partial: 'layouts/mailers/footer'