%ol.breadcrumb
  %li= link_to 'Services', action: :index
  %li.active= @service.certificate
- content_for :title do
  #{@service.certificate} Service
%h1= @service.certificate
%aside
  %div= link_to 'Edit', edit_service_path
  - if @service.deployable?
    %div= link_to 'Deploy certificate', action: :deploy
  - else
    Can't be deployed until the #{link_to 'certificate', @service.certificate} has been signed
= render partial: 'service_status'