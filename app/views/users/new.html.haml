%h2= t 'users.new'
%p An email with a link to reset their password will be sent to the given email address
= form_for @user, class: 'form-horizontal' do
  - if @validations.try(:any?)
    .text-danger There are #{@validations.count} errors that must be fixed.
  .form-group{ class: validates?(:first_name, 'has-error has-feedback') }
    = label :user, :first_name, (t 'account.first_name'), class: 'col-sm-2 control-label'
    .col-sm-10
      = text_field :user, :first_name, placeholder: (t 'account.first_name'), class: 'form-control'
      %span.help-block
        - @validations.try(:[], 'first_name').try(:each) do |error|
          %span First name #{error}.
  .form-group{ class: validates?(:last_name, 'has-error has-feedback') }
    = label :user, :last_name, (t 'account.last_name'), class: 'col-sm-2 control-label'
    .col-sm-10
      = text_field :user, :last_name, placeholder: (t 'account.last_name'), class: 'form-control'
      %span.help-block
        - @validations.try(:[], 'last_name').try(:each) do |error|
          %span Last name #{error}.
  .form-group{ class: validates?(:email, 'has-error has-feedback') }
    = label :user, :email, (t 'account.username'), class: 'col-sm-2 control-label'
    .col-sm-10
      = email_field :user, :email, placeholder: (t 'account.username'), class: 'form-control'
      %span.help-block
        - @validations.try(:[], 'email').try(:each) do |error|
          %span Email #{error}.
  .form-group
    .col-sm-2
    .col-sm-10
      = submit_tag 'Create account', class: 'btn btn-primary'
